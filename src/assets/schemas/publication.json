{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "doc_id": { "type": "string" },
        "resource_type": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "description": { "type": "string" },
                    "publication_type": { "type": "string" },
                    "identifier": { "type": "string" },
                    "identifier_value": { "type": "string" },
                    "file": {
                        "type": "object",
                        "properties": {
                            "path": { "type": "string" },
                            "extension": { "type": "string" }
                        },
                        "required": ["path", "extension"]
                    }
                },
                "required": ["title", "description", "publication_type", "identifier", "identifier_value", "file"]
            }
        },
        "documents": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "description": { "type": "string" },
                    "document_type": { "type": "string" },
                    "identifier": { "type": "string" },
                    "identifier_value": { "type": "string" },
                    "file": {
                        "type": "object",
                        "properties": {
                            "path": { "type": "string" },
                            "extension": { "type": "string" }
                        },
                        "required": ["path", "extension"]
                    }
                },
                "required": ["title", "description", "document_type", "identifier", "identifier_value", "file"]
            }
        },
        "creators": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "full_name": { "type": "string" },
                    "family_name": { "type": "string" },
                    "given_name": { "type": "string" },
                    "identifier": { "type": "string" },
                    "affiliation": { "type": "string" },
                    "role": { "type": "string" }
                },
                "required": ["full_name", "family_name", "given_name"]
            }
        },
        "organizations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "full_name": { "type": "string" },
                    "family_name": { "type": "string" },
                    "given_name": { "type": "string" },
                    "identifier": { "type": "string" },
                    "affiliation": { "type": "string" },
                    "role": { "type": "string" }
                }
            }
        },
        "funders": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": { "type": "string" },
                    "name": { "type": "string" },
                    "id": { "type": "string" },
                    "activity": { "type": "string" }
                }
            }
        },
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "description": { "type": "string" }
                },
                "required": ["title", "description"]
            }
        }
    },
    "required": ["doc_id", "resource_type", "title", "description"]
}
